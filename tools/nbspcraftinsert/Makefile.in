@include@ @q@../../Makefile.inc@q@

TCLSOURCES =	nbspcraftinsert.tcl
TCLTARGET =	nbspcraftinsert

TARGET =	${TCLTARGET} ${SAMPLES}

TCLSH =		@TCLSH@
INSTALL =	@INSTALL@

CRAFTINSERT_LIBDIR = ${MYLIBEXECDIR}

all: ${TARGET}

nbspcraftinsert: nbspcraftinsert.tcl
	sed -e /%TCLSH%/s##${TCLSH}# \
	-e /%CRAFTINSERT_LIBDIR%/s##${CRAFTINSERT_LIBDIR}# \
	nbspcraftinsert.tcl > nbspcraftinsert

install: ${TARGET}
	${INSTALL} -m 755 ${TCLTARGET} ${BINDIR}

clean:
	rm -f *~ ${TARGET} Makefile
