@include@ @q@../../Makefile.inc@q@

TARGET = nbspmcast
SOURCES = nbspmcast.c sbnpack_usleep.c err.c seqmun.c stoi.c
OBJECTS = nbspmcast.o sbnpack_usleep.o err.o seqnum.o stoi.o
HEADERS = sbnpack_usleep.h err.h seqnum.h stoi.h
AUXFILES = config.h err.c err.h stoi.h

INCDIRS = -I sbnpack -I mcast
LIBDIRS = -L sbnpack -L mcast
LIBS = -lsbnpack -lmcast
INSTALL =       @INSTALL@
CC =            @CC@
CCWFLAGS =      @CCWFLAGS@

CCWFLAGS = @CCWFLAGS@
CFLAGS += -c ${CCWFLAGS} ${INCDIRS}

all: ${TARGET}

@SUFFIXRULES@ ${HEADERS}
	${CC} ${CFLAGS} $<

lib:
	cd sbnpack; make
	cd mcast; make

${TARGET}: ${OBJECTS} lib
	${CC} -o ${TARGET} ${OBJECTS} ${LIBDIRS} ${LIBS}

recv: recv.c
	${CC} -o recv recv.c ${INCDIRS} ${LIBDIRS} ${LIBS}

install: all
	${INSTALL} -m 755 ${TARGET} ${BINDIR}

clean:
	rm -f *~
	rm -f ${OBJECTS} ${TARGET} Makefile
	rm -f recv recv.o
	rm -f ${AUXFILES} 
	cd sbnpack; ${MAKE} clean
	cd mcast; ${MAKE} clean
