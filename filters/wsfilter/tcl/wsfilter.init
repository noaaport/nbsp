# The local overrides
if {[file exists $wsfilter(conf)]} {
    source $wsfilter(conf);
}

#
# Common functions
#
proc wsfilter_strip_zeros {v} {

    set r [string trimleft $v 0];
    if {$r eq ""} {
        set r 0;
    }

    return $r;
}
