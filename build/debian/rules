#!/usr/bin/make -f
#
# $Id$

include VERSION

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

configure: stage.configure

build: stage.build

stage.configure:
	dh_testdir
	./configure.sh
	touch stage.configure

stage.build: Makefile stage.configure 
	dh_testdir
	${MAKE}
	touch stage.build

Makefile: Makefile.in
	./configure.sh

clean: Makefile
	dh_testdir
	dh_testroot
	rm -f stage.*
	-${MAKE} clean
	dh_clean 

install: Makefile stage.build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	${MAKE} PKGBUILDDIR=${CURDIR}/debian/${name} \
		PKGCONFDIR=/dist PKGSHAREDIR=/dist install

binary: install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: build clean binary install configure
