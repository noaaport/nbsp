#!/bin/sh

# To install tcl, pkg_add must be invoked as "pkg_add -r tcl86", but to
# check for the package, it must be in the form "tcl-8.6".
#
requires="db47 tcl-8.6 tcllib tk-8.6 expect png netpbm gnuplot gifsicle mapserver"

conflict="nbspgribrsh"

# so that FreeBSD runs it only once 
name=$1
key=$2
[ "$key" = "DEINSTALL" ] && exit 0

exit_status=0
for p in $requires
do
    result=`pkg_info -I ${p}* 2> /dev/null`
    status=$?
    if [ $status -ne 0 ]
    then
	echo "$p not found."
	exit_status=1
    fi
done

for p in $conflict
do
    result=`pkg_info -I ${p}* 2> /dev/null`
    status=$?
    if [ $status -eq 0 ]
    then
	echo "$p conflict"
	exit_status=1
    fi
done

exit $exit_status
